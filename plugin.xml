<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="classCleanerBuilder"
         name="ClassCleaner Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="de.centerdevice.classcleaner.ClassCleanerBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="classCleanerNature"
         name="ClassCleaner Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="de.centerdevice.classcleaner.ClassCleanerNature">
         </run>
      </runtime>
      <builder
            id="ClassCleaner.classCleanerBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="ClassCleaner Nature commands"
            id="ClassCleaner.classCleanerNature.category">
      </category>
      <command
            name="Add/RemoveClassCleaner Nature"
            defaultHandler="de.centerdevice.classcleaner.AddRemoveClassCleanerNatureHandler"
            categoryId="ClassCleaner.classCleanerNature.category"
            id="ClassCleaner.addRemoveClassCleanerNature">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
         <command
               commandId="ClassCleaner.addRemoveClassCleanerNature"
               label="Disable ClassCleaner"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <test
                              value="ClassCleaner.classCleanerNature"
                              property="org.eclipse.core.resources.projectNature">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="ClassCleaner.addRemoveClassCleanerNature"
               label="Enable ClassCleaner"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <not>
                           <test
                                 value="ClassCleaner.classCleanerNature"
                                 property="org.eclipse.core.resources.projectNature">
                           </test>
                        </not>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         id="xmlProblem"
         name="XML Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="false">
      </persistent>
   </extension>
   <extension
        point="org.eclipse.ui.handlers">
     <handler
           class="de.centerdevice.classcleaner.RunCleanerHandler"
           commandId="de.centerdevice.classcleaner.RunCleanerCommand">
     </handler>
   </extension>
   <extension
        point="org.eclipse.ui.handlers">
     <handler
           class="de.centerdevice.classcleaner.CreateDotFileHandler"
           commandId="de.centerdevice.classcleaner.CreateDotFileCommand">
     </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
         <command name="Run full analysis"
               id="de.centerdevice.classcleaner.RunCleanerCommand">
         </command>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
         <command name="Create Dot-File"
               id="de.centerdevice.classcleaner.CreateDotFileCommand">
         </command>
   </extension>
   <extension point="org.eclipse.ui.bindings">
		<key sequence="M1+CTRL+C"
			commandId="de.centerdevice.classcleaner.RunCleanerCommand"
			schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
			contextId="org.eclipse.ui.contexts.window"/>
	</extension>
   <extension point="org.eclipse.ui.menus">
     <menuContribution locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
     	<menu id="de.centerdevice.classcleaner.sampleMenu" label="ClassCleaner">
	        <command
	            commandId="de.centerdevice.classcleaner.RunCleanerCommand"
	            style="push">
	            <visibleWhen
	                 checkEnabled="false">
	             	<iterate>
			        	<adapt type="org.eclipse.core.resources.IResource">
			         	<test property="org.eclipse.core.resources.name" 
			               value="*.java"/>
			       </adapt>
			    	</iterate>
	        	</visibleWhen>
	        </command>
	        <command
	            commandId="de.centerdevice.classcleaner.CreateDotFileCommand"
	            style="push">
	            <visibleWhen
	                 checkEnabled="false">
	             <iterate>
			       <adapt type="org.eclipse.core.resources.IResource">
			         <test property="org.eclipse.core.resources.name" 
			               value="*.java"/>
			       </adapt>
			     </iterate>
	          </visibleWhen>
	        </command>
     	</menu>
     </menuContribution>
   </extension>
</plugin>
